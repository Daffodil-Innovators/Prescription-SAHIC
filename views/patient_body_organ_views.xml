            <field name="model">dsl.patient.body.organ</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="code"/>
                            </group>
                            <group>
                                <field name="active"/>
                            </group>
                        </group>
<!--                        <notebook>-->
