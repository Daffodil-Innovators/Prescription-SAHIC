<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Body Organ Tree View -->
        <record id="view_dsl_patient_body_organ_tree" model="ir.ui.view">
            <field name="name">dsl.patient.body.organ.tree</field>
            <field name="model">dsl.patient.body.organ</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="code"/>
                    <field name="name"/>
<!--                    <field name="active"/>-->
                </tree>
            </field>
        </record>

        <!-- Body Organ Form View -->
        <record id="view_dsl_patient_body_organ_form" model="ir.ui.view">
